suma=0
for i in range(3):
  nota=float(input(f'ingrese nota {i+1} '))
  suma+=nota

prom=suma/3
print("su promedio es: ", prom);
if prom>=4.0 :
  print("felicitaciones!, está aprobado");
else:
  print("debe estudiar más, está reprobado");
if prom>=4.0 and prom<5.0:
  print("Promedio regular")
if prom>=5.0 and prom<6.0:
  print("Promedio suficiente")
if prom>=6.0 and prom<=7.0:
  print("Promedio excelente")
